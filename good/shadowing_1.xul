// This code can be compiles with `gcc -x c shadowing.xul`.
// The compiled C program and Xul interpreter will give exactly the same output.

#include <stdio.h>

#define NOT_XUL

#ifndef NOT_XUL
void printf(string format, int num) {
  print(num);
}
#endif

int main() {
  int a = 0;
  while (a < 3) {
    printf("%d\n", a);
    a++;
    int a = 42;
    printf("%d\n", a);
  }
  printf("%d\n", a);
  {
    int a = 10;
    printf("%d\n", a);
  }
  printf("%d\n", a);
  return 0;
}
